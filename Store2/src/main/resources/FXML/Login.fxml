<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
   <children>
      <VBox>
         <children>
            <ImageView fitHeight="547.0" fitWidth="606.0" pickOnBounds="true">
               <image>
                  <Image url="@../image/loginBackground.jpg" />
               </image>
            </ImageView>
         </children>
      </VBox>
      <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #EEEEEE; -fx-opacity: 0.8;">
         <children>
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../image/logo.png" />
               </image>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </ImageView>
            <TextField fx:id="txtUsername" prefHeight="31.0" prefWidth="326.0" promptText="Enter your name ...">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="txtPassword" promptText="Enter your password...">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" />
               </VBox.margin>
            </PasswordField>
            <Text fx:id="error" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-fill: red;">
               <VBox.margin>
                  <Insets bottom="10.0" left="5.0" right="5.0" />
               </VBox.margin>
            </Text>
            <Button mnemonicParsing="false" onAction="#loginAction" prefHeight="31.0" prefWidth="323.0" text="LOGIN" />
         </children>
         <StackPane.margin>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
         </StackPane.margin>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
